.ext-footer
  padding 60px 0 0 0
  margin-top 30px
  font-size 1em
  background-color #f5f5f5
  border-top: 1px solid rgba(0, 0, 0, 0.1)

  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between
    @media screen and (max-width: 992px)
      flex-direction: column
      align-items: center

  .institutional
    margin-bottom 60px
    p
      max-width 560px
  a
    color $main-link-color
    font-weight 400
    &:hover
      color $main-link-color-hover
      text-decoration underline

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 15px
    // margin-bottom 30px

    img
      max-width 100%
      width 150px

  .menu
    padding 0 15px
    text-align left

    // &:first-of-type
    //   flex-grow 3

    a
      display block
      padding 6px 0

  .footer-navigation
    display: flex
    flex-direction: row

  .flex-logos
    display flex
    flex-direction: row
    align-items: flex-end
    justify-content: space-between

  .logo-wrapper
    width 100%
    min-width: 150px
    padding-right 15px

    &.colaboracion
      padding-left: 15px;
      padding-right 0
      flex-wrap: nowrap
      
      img
        width 50%
        min-width 65px
        max-width: 100px
      div 
        display: flex
        flex-wrap: nowrap
      
    &:first-child
      border-right: 1px solid #000

  .demored
    background-color: $main-color-resalted
    color: #fff
    text-align: center

    .row
      max-width: 1180px;
      margin 0 auto
      align-items: center
    a
      color: #fff
    
    img 
      max-width: 100%
      height: 40px
    

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    // .gob
    //   img
    //     width 300px

    .institutional
      padding 0 15px
